<Page x:Class="GUI.Home.SkapaUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Home"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SkapaUserPage">

    <Grid Background="#FF746B6B">
        <DataGrid x:Name="MekGrid" Margin="0,0,0,213" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button x:Name="btnSkapaUser" Content="Skapa Användare" HorizontalAlignment="Center" Margin="0,382,0,0" VerticalAlignment="Top" Height="68" Width="284" Click="btnSkapaUser_Click"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="149,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="24"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="461,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="25"/>
        <Label x:Name="lblUsername" Content="Skriv användarnamn (adressen skapas automatiskt)" HorizontalAlignment="Left" Margin="113,309,0,0" VerticalAlignment="Top" Width="287" Height="27"/>
        <Label x:Name="lblPassword" Content="Lösenord:" HorizontalAlignment="Left" Margin="461,310,0,0" VerticalAlignment="Top" Width="227"/>

    </Grid>
</Page>
